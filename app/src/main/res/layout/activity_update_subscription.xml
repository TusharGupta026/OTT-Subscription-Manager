<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".UpdateSubscriptionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/editCardView"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/goBackEdit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_arrow_back"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="150dp"
                android:fontFamily="@font/encode_sans_medium"
                android:text="INR"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:typeface="sans" />

            <EditText
                android:id="@+id/editSubscriptionAmount"
                android:layout_width="135dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:ems="1"
                android:gravity="center"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:textColor="@color/black"
                android:textColorHighlight="#154588"
                android:textColorHint="@color/black"
                android:textColorLink="#154588"
                android:textSize="45sp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editCardView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/epilogue_bold"
                android:text="Subscription"
                android:textColor="@color/grey"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editSubscription"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/round_input"
                android:dropDownWidth="match_parent"
                android:fontFamily="@font/encode_sans_medium"
                android:padding="5dp"
                android:text="Netflix"
                android:textColor="@color/white"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/epilogue_bold"
                android:text="Description"
                android:textColor="@color/grey"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editDescription"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/round_input"
                android:ems="1"
                android:fontFamily="@font/encode_sans_medium"
                android:hint="e.g.Premium plan"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:textColorHint="@color/hint_color"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/epilogue_bold"
                android:text="Payment Method"
                android:textColor="@color/grey"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/round_input"
                android:ems="1"
                android:fontFamily="@font/encode_sans_medium"
                android:hint="e.g.Credit Card"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:textColorHint="@color/hint_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/epilogue_bold"
                android:text="Email"
                android:textColor="@color/grey"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/round_input"
                android:ems="1"
                android:fontFamily="@font/encode_sans_medium"
                android:hint="Email Address"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:textColorHint="@color/hint_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/epilogue_bold"
                android:text="Billing Period"
                android:textColor="@color/grey"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editBillingDate"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_input"
                    android:ems="1"
                    android:fontFamily="@font/encode_sans_medium"
                    android:hint="1"
                    android:inputType="number"
                    android:maxLength="2"
                    android:paddingStart="8dp"
                    android:textColorHint="@color/hint_color"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/editBillingPeriodSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1.05"
                    android:background="@drawable/round_input"
                    android:fontFamily="@font/encode_sans_medium"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Monthly"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/updateSubscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/round_button"
                android:paddingHorizontal="40dp"
                android:paddingVertical="15dp"
                android:text="Update Subscription"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>